{
  "functions": {
    "api/transcribe.js": {
      "maxDuration": 300,
      "memory": 1024
    },
    "api/transcribe-from-blob.js": {
      "maxDuration": 300,
      "memory": 1024
    },
    "api/blob-upload-token.js": {
      "maxDuration": 60,
      "memory": 512
    },
    "api/analyze.js": {
      "maxDuration": 60,
      "memory": 512
    },
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ]
}